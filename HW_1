#df1
def revword(my_word):
    n=""
    my_word=my_word.lower()
    for i in range(1,len(my_word)+1):
        n+=my_word[-i]
    return n
#df2
def countword(file):
    counter= 1
    f_name = open(file)
    empty=[]
    for line in f_name:
        line = line.rstrip()
        if len(line.split())<2:
            word= line
        else:
            l_line= line.split()
            for i in l_line:
                revword(i)
                empty.append(revword(i))
        for i in empty:
            if i==word:
                counter+=1
    return counter
